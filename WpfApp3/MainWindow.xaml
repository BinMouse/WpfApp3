<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="AliceBlue" IsHitTestVisible="False" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4"/>
        <Rectangle Fill="Azure"  IsHitTestVisible="False" Grid.Column="1" Grid.Row="0"/>
        <Rectangle Fill="BurlyWood" IsHitTestVisible="False" Grid.Column="3" Grid.Row="0" Grid.RowSpan="4"/>
        <Label Grid.Row="0" Grid.Column="1" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">Заголовок и название песни</Label>

        <TextBlock Grid.Column="1" FontSize="25" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text="Тут статичный заголовок меню - кнопки окошки которых будут выезжать вправо на основной экран" Margin="0,12,0,0" Width="578" Grid.RowSpan="3">
            <TextBlock.RenderTransform>
                <RotateTransform Angle="90" />
            </TextBlock.RenderTransform>
        </TextBlock>

        <TextBlock Grid.Column="2" Grid.Row="0" FontSize="25" TextWrapping="Wrap" Text="Тут статистикапо игре - сколько попал склько промазал и т.д." Grid.RowSpan="2" Margin="100,0,-597,393">
            <TextBlock.RenderTransform>
                <RotateTransform Angle="90" />
            </TextBlock.RenderTransform>
        </TextBlock>
        <Image Grid.Row="1" Grid.Column="1" x:Name="MyImage" Width="1040" Height="400"/>
        <WrapPanel Grid.Row="2" Grid.Column="1" x:Name="keyboard" Height="200"/>
        <Button Grid.Row="3" Grid.Column="1" Click="Button_Click">Start</Button>
    </Grid>
</Window>
